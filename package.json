{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "name": "codin_modules",
  "version": "0.0.2",
  "author": "Odin Rochmman <odin.rochmann@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:odinr/codin.git"
  },
  "scripts": {
    "clean": "lerna clean --yes && del-cli packages/*/package-lock.json && npm run clean:typescript",
    "clean:typescript": "npm run build:typescript -- --clean",
    "bootstrap": "npm install",
    "update-packages": "lerna exec -- npx npm-check-updates -u",
    "postupdate-packages": "lerna bootstrap --hoist",
    "postinstall": "lerna bootstrap --hoist",
    "build": "npm run build:typescript -- --verbose",
    "build:typescript": "tsc -b",
    "build:storybook": "npm --prefix stories run build",
    "postbuild:storybook": "git add docs && git commit -m 'doc: update docs ðŸ“‘'",
    "prepack": "npm run build",
    "postpublish": "npm run build:storybook"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "del-cli": "^3.0.0",
    "lerna": "^3.20.2",
    "lerna-update-wizard": "^0.17.8",
    "lit-element": "2.3.1",
    "lit-html": "^1.2.1",
    "lodash.camelcase": "^4.3.0",
    "rollup": "^2.2.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "^5.3.0",
    "tslib": "^1.11.1",
    "typescript": "3.8.3"
  },
  "_later": {
    "doc": "typedoc --target es6 --mode modules --excludeNotExported --excludePrivate --ignoreCompilerErrors --out ./docs src"
  },
  "dependencies": {
    "prettier": "^2.0.5"
  }
}
